<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Thalo - Shipment Tracker</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
</head>
<body>
  <header>
    <h1>Thalo</h1>
    <p>Your logistics companion</p>
  </header>

  <main>
    <section class="form-section">
      <h2>Add New Load</h2>
      <form id="loadForm">
        <input type="text" id="origin" placeholder="Origin" required />
        <input type="text" id="destination" placeholder="Destination" required />
        <select id="status" required>
          <option value="">Select Status</option>
          <option value="Draft">Draft</option>
          <option value="Covered">Covered</option>
          <option value="Dispatched">Dispatched</option>
          <option value="At pick up">At pick up</option>
          <option value="Picked up">Picked up</option>
          <option value="En route">En route</option>
          <option value="At receiver">At receiver</option>
          <option value="Delivered">Delivered</option>
          <option value="Ready to bill">Ready to bill</option>
        </select>
        <button type="submit">Add Load</button>
      </form>
    </section>

    <section class="search-filter">
      <input type="text" id="searchInput" placeholder="Search by origin, destination or status" />
      <select id="statusFilter">
        <option value="">Filter by Status</option>
        <option value="Draft">Draft</option>
        <option value="Covered">Covered</option>
        <option value="Dispatched">Dispatched</option>
        <option value="At pick up">At pick up</option>
        <option value="Picked up">Picked up</option>
        <option value="En route">En route</option>
        <option value="At receiver">At receiver</option>
        <option value="Delivered">Delivered</option>
        <option value="Ready to bill">Ready to bill</option>
      </select>
    </section>

    <section class="load-list">
      <h2>All Loads</h2>
      <table>
        <thead>
          <tr>
            <th>Load ID</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="loadTableBody">
          <% loads.forEach(load => { %>
            <tr data-id="<%= load.id %>">
              <td><%= load.load_id %></td>
              <td><%= load.origin %></td>
              <td><%= load.destination %></td>
              <td><%= load.status %></td>
              <td>
                <button class="edit-btn">Edit</button>
                <button class="delete-btn">Delete</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>

  <script src="/script.js"></script>
</body>
</html>
